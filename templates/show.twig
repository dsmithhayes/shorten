{%  extends 'home.twig' %}

{% block js_include %}
    <script src="js/jquery.js"></script>
    <script src="js/app.js"></script>
{% endblock %}

{% block body %}
    <div class="main-form copy-form">
        <form id="copy-form" action="/shorten" method="post">
            <input id="url" type="text" name="url" value="{{ url }}"/>
            <button id="copy-button" type="submit" name="copy-button">Copy</button>
        </form>
    </div>
{% endblock %}